{
  "description": "No Direct IP",
  "manifest_version": 2,
  "name": "no-direct-ip",
  "version": "0.1",
  "homepage_url": "https://github.com/OllieJC/firefox-no-direct-ip",
  "icons": {
    "48": "icons/block.svg"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }
}
