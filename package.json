{
  "name": "no-direct-ip",
  "version": "0.2.1",
  "description": "Block directly entered, external or public IP v4 and v6 addresses",
  "main": "background.js",
  "files": [
    "background.js",
    "service_worker.js",
    "LICENSE",
    "icons/*",
    "resources/*",
    "manifest.json",
    "README.md"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint background.js service_worker.js resources/",
    "fix": "eslint --fix background.js service_worker.js resources/",
    "pack-v2": "copy manifest-v2.json manifest.json && npm-pack-zip --ver --dst build/v2/ && del manifest.json",
    "pack-v3": "copy manifest-v3.json manifest.json && npm-pack-zip --ver --dst build/v3/ && del manifest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OllieJC/no-direct-ip.git"
  },
  "author": "OllieJC",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/OllieJC/no-direct-ip/issues"
  },
  "homepage": "https://github.com/OllieJC/no-direct-ip#readme",
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "jest": "^27.5.1",
    "npm-pack-zip": "^1.3.0"
  }
}
